<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_Description1"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:text="TextView" />


    <TextView
        android:id="@+id/tv_Description2"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_below="@+id/tv_Description1"
        android:text="TextView" />


    <CheckBox
        android:id="@+id/ch_box1"
        android:layout_width="102dp"
        android:layout_height="match_parent"
        android:layout_above="@+id/tv_Description2"
        android:layout_marginBottom="-35dp"
        android:layout_toEndOf="@+id/tv_Description1"
        android:layout_toRightOf="@+id/tv_Description1"
        android:text="" />

    <EditText
        android:id="@+id/et_ProductID"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_below="@+id/tv_Description1"
        android:visibility="invisible" />

</RelativeLayout>

